@using LocadoraDeVeiculos.WebApp.Models
@model DetalhesVeiculosViewModel

@{
    ViewBag.Title = "Excluir Veículo";
}

<div class="col">
    <partial name="_Informacoes" model="Model"></partial>

    <form class="d-grid gap-2 d-md-block my-3" asp-action="Excluir">
        <button class="btn btn-danger" style="width: 185px">
            <i class="bi bi-trash-fill me-1"></i>
            Confirmar
        </button>
        <a class="btn btn-outline-secondary px-5" style="width: 185px" href="/Veiculos/listar">
            <i class="bi bi-arrow-return-left me-1"></i>
            Voltar
        </a>
    </form>
</div>
